{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        // Business unit parameter: The unit in the business that this resource belongs to.
        "businessUnit": {
            "type": "string",
            "allowedValues": [
                "gai",
                "iag",
                "fsm",
                "gmr",
                "azf",
                "plf"
            ]
        },
        // The application service that this resource is associated with.
        "projectAppService": {
            "type": "string"
        },
        // The environment that this resource is deployed in (e.g., dev, prod, etc.)
        "environment": {
            "type": "string",
            "allowedValues": [
                "dev",
                "prod",
                "qa",
                "test"
            ]
        },
        // The region where this resource is deployed.
        "region": {
            "type": "string",
            "allowedValues": [
                "westus3",
                "westus",
                "eastus2"
            ],
            "defaultValue": "westus3"
        },
        // The type of the resource.
        "resourceType": {
            "type": "string",
            "defaultValue": "vnet"
        },
        // The address prefix for the virtual network.
        "vnetAddressPrefix": {
            "type": "string"
        },
        // The address prefix for the default subnet.
        "defaultSubnetAddressPrefix": {
            "type": "string"
        },
        // The address prefix for the Domain Controllers subnet.
        "dcSubnetAddressPrefix": {
            "type": "string"
        },
        // The address prefix for the Azure Firewall subnet.
        "azureFirewallSubnetAddressPrefix": {
            "type": "string"
        },
        // The address prefix for the Azure Firewall Management subnet.
        "azureFirewallManagementSubnetAddressPrefix": {
            "type": "string"
        }       
    },
    "variables": {
        // Define abbreviations for the regions.
        "regionAbbreviations": {
            "westus3": "wus3",
            "westus": "wus",
            "eastus2": "eus2"
        },
        // Construct the name of the vnet using the parameters.
        "vnetName": "[concat(parameters('businessUnit'), '-', parameters('projectAppService'), '-', parameters('resourceType'), '-', parameters('environment'), '-', variables('regionAbbreviations')[parameters('region')])]"
    },
    "resources": [
        // Define the virtual network resource.
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-05-01",
            "name": "[variables('vnetName')]",
            "location": "[parameters('region')]",
            "properties": {
                "addressSpace": {
                    // Set the address prefixes for the vnet using the parameter.
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                },
                // Define the subnets for the vnet.
                "subnets": [
                    // Default subnet.
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "[parameters('defaultSubnetAddressPrefix')]"
                        }
                    },
                    // Domain Controllers subnet.
                    {
                        "name": "dcSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('dcSubnetAddressPrefix')]"
                        }
                    },
                    // Azure Firewall Subnet.
                    {
                        "name": "AzureFirewallSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('azureFirewallSubnetAddressPrefix')]"
                        }
                    },
                    // Azure Firewall Management Subnet.
                    {
                        "name": "AzureFirewallManagementSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('azureFirewallManagementSubnetAddressPrefix')]"
                        }
                    }
                ]
            }
        },
        // Define a lock to prevent accidental deletion of the vnet.
        {
            "type": "Microsoft.Authorization/locks", // The resource type for Azure locks.
            "name": "CanNotDelete", // The name of the lock.
            "apiVersion": "2016-09-01", // The API version for the lock resource type.
            "dependsOn": [ 
                // This lock depends on the vnet resource. The lock will not be created until the vnet resource is successfully deployed.
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
            ],
            "properties": {
                "level": "CanNotDelete", // The level of the lock. CanNotDelete means authorized users can read and modify the resources, but they can't delete the resources.
                "notes": "Lock on the resource group to prevent accidental deletion of resources." // Notes about the lock.
            }
        }
    ],
    "outputs": {
    "subnetId": {
        "type": "string",
        "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), 'AzureFirewallSubnet')]"
    },
    "managementSubnetId": {
        "type": "string",
        "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), 'AzureFirewallManagementSubnet')]"
    }
}

}
